<UserControl x:Class="ProjectWS.Editor.TimeTrackFloatInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectWS.Editor"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="300">
    <Grid>
        <TextBox x:Name="inputField" Margin="150,0,0,0" TextWrapping="Wrap" Text="TextBox"/>
        <Label x:Name="label" Content="Label" Padding="10,0,10,0" Foreground="White" Margin="0,0,150,0"/>

    </Grid>
</UserControl>
